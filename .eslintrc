{
  "parser": "@babel/eslint-parser",
  "parserOptions": {
    "ecmaVersion": 6,
    "requireConfigFile": false,
    "ecmaFeatures": {
      "experimentalObjectRestSpread": true
    },
    "babelOptions": {
      "presets": ["@babel/preset-react"]
    }
  },
  "env": {
    "browser": true,
    "commonjs": true,
    "es6": true,
    "jquery": true
  },
  "extends": [
    "standard",
    "standard-jsx",
    "plugin:jsx-a11y/recommended"
  ],
  "rules": {
    "jsx-quotes": [2, "prefer-double"]
  },
  "plugins": [
    "jsx-a11y"
  ]
}
